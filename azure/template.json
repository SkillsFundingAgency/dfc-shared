{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appServicePlanName": {
      "type": "string",
      "metadata": {
          "description": "App service plan to run the app under"
      }
    },
    "appServicePlanSize": {
      "type": "string",
      "defaultValue": "1",
      "metadata": {
          "description": "Size of the instances in the app service plan"
      },
      "allowedValues": [
        "1",
        "2",
        "3"
      ]
    },
    "appServicePlanInstances": {
      "type": "int",
      "defaultValue": 1,
      "metadata": {
          "description": "Number of instances in the app service plan"
      }
    },
    "aseHostingEnvironmentName": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
          "description": "App service plan to run the app under"
      }
    },
    "aseResourceGroup": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
          "description": "Resource group the app service plan is in"
      }
    },
    "keyVaultName": {
      "type": "string",
      "metadata": {
          "description": "Name of the key vault"
      }
    }
  },
  "variables": {
    "deploymentUrlBase": "https://raw.githubusercontent.com/SkillsFundingAgency/das-platform-building-blocks/master/templates/"
  },
  "resources": [
    {
      "apiVersion": "2017-05-10",
      "name": "sharedAppServerPlan",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('deploymentUrlBase'),'app-service-plan.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "appServicePlanName": {
            "value": "[parameters('appServicePlanName')]"
          },
          "aseHostingEnvironmentName": {
            "value": "[parameters('aseHostingEnvironmentName')]"
          },
          "aseResourceGroup": {
            "value": "[parameters('aseResourceGroup')]"
          },
          "aspSize": {
            "value": "[parameters('appServicePlanSize')]"
          },
          "aspInstances": {
            "value": "[parameters('appServicePlanInstances')]"
          }
        }
      }
    },
    {
      "apiVersion": "2017-05-10",
      "name": "sharedKeyVault",
      "type": "Microsoft.Resources/deployments",
      "dependsOn": [
        "sharedAppServerPlan"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('deploymentUrlBase'),'keyvault.json')]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "keyVaultName": {
            "value": "[parameters('keyVaultName')]"
          },
          "servicePrincipalObjectId": {
            "value": "abfa0a7c-a6b6-4736-8310-5855508787cd"
          },
          "secretName": {
            "value": "[parameters('appServicePlanName')]"
          },
          "secretValue": {
            "value": "[reference('sharedAppServerPlan').outputs.appServicePlanId.value]"
          }
        }
      }
    }
  ],
  "outputs": {}
}